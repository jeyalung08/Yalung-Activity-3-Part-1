@model Yalung_Activity_3_Part_1.Models.Book

@{
    ViewData["Title"] = "Edit Book";  
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" crossorigin="anonymous">

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Book</h2>

    @using (Html.BeginForm())
    {
        <!-- Title input -->
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label" }) <!-- Label -->
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter book title" }) <!-- Text input for Title with Bootstrap styling and placeholder -->
        </div>

        <!-- Author input -->
        <div class="form-group">
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placeholder = "Enter author name" })
        </div>

        <!-- Price input -->
        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Enter book price" })
        </div>

        <!-- Publication Year input -->
        <div class="form-group">
            @Html.LabelFor(model => model.PublicationYear, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.PublicationYear, new { @class = "form-control", placeholder = "Enter publication year" })
        </div>

        <!-- Submit btn -->
        <div class="form-group text-center mt-4">  <!-- btn design -->
            <input type="submit" value="Update Book" class="btn btn-primary" />
        </div>
    }
</div>

<!-- Include Bootstrap JavaScript (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
