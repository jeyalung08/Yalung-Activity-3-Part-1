@model IEnumerable<Yalung_Activity_3_Part_1.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" crossorigin="anonymous">

<div class="container mt-5">
    <h2 class="text-center">Book List</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Publication Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Price.ToString("C")</td>
                        <td>@book.PublicationYear</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Books" asp-route-id="@book.Id" class="btn btn-primary">Edit</a> |
                            <a asp-action="Delete" asp-controller="Books" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No books available.</p>
    }

    <a asp-action="Create" asp-controller="Books" class="btn btn-success">Add New Book</a>
</div>

<!-- Footer Section -->
<footer class="text-center mt-4">
    <p>© 2025 - Yalung_Activity_3_Part_1</p>
</footer>

<!-- Include Bootstrap JavaScript (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
